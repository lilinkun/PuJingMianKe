<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/v_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_down"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_up" />

    <View
        android:id="@+id/v_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@drawable/shape_calendar"
        app:layout_constraintBottom_toBottomOf="@id/v_down"
        app:layout_constraintEnd_toEndOf="@id/v_down"
        app:layout_constraintStart_toStartOf="@id/v_down"
        app:layout_constraintTop_toTopOf="@id/v_down" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/cancel"
        android:textColor="@color/text_gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/v_content"
        app:layout_constraintTop_toTopOf="@id/v_content" />

    <TextView
        android:id="@+id/tv_new_matter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_matter"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/v_content"
        app:layout_constraintStart_toStartOf="@id/v_content"
        app:layout_constraintTop_toTopOf="@id/tv_cancel" />

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/add"
        android:textColor="#F75A47"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/v_content"
        app:layout_constraintTop_toTopOf="@id/tv_cancel" />

    <TextView
        android:id="@+id/tv_start_time_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/start_time"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/v_content"
        app:layout_constraintTop_toBottomOf="@id/tv_cancel" />

    <ImageView
        android:id="@+id/iv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/ic_forward"
        app:layout_constraintBottom_toBottomOf="@id/tv_start_time_key"
        app:layout_constraintEnd_toEndOf="@id/v_content"
        app:layout_constraintTop_toTopOf="@id/tv_start_time_key" />

    <TextView
        android:id="@+id/tv_start_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_start_time_key"
        app:layout_constraintEnd_toStartOf="@id/iv_start_time"
        app:layout_constraintTop_toTopOf="@id/tv_start_time_key" />

    <View
        android:id="@+id/v_start_time"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="#cccccc"
        app:layout_constraintEnd_toEndOf="@id/v_content"
        app:layout_constraintStart_toStartOf="@id/v_content"
        app:layout_constraintTop_toBottomOf="@id/tv_start_time_key" />

    <TextView
        android:id="@+id/tv_end_time_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/end_time"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/v_content"
        app:layout_constraintTop_toBottomOf="@id/tv_start_time_key" />

    <ImageView
        android:id="@+id/iv_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/ic_forward"
        app:layout_constraintBottom_toBottomOf="@id/tv_end_time_key"
        app:layout_constraintEnd_toEndOf="@id/v_content"
        app:layout_constraintTop_toTopOf="@id/tv_end_time_key" />

    <TextView
        android:id="@+id/tv_end_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_end_time_key"
        app:layout_constraintEnd_toStartOf="@id/iv_end_time"
        app:layout_constraintTop_toTopOf="@id/tv_end_time_key" />

    <View
        android:id="@+id/v_end_time"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="#cccccc"
        app:layout_constraintEnd_toEndOf="@id/v_content"
        app:layout_constraintStart_toStartOf="@id/v_content"
        app:layout_constraintTop_toBottomOf="@id/tv_end_time_key" />

    <EditText
        android:id="@+id/et"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_calendar"
        android:gravity="top"
        android:hint="美甲预约"
        android:padding="10dp"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/v_content"
        app:layout_constraintEnd_toEndOf="@id/v_content"
        app:layout_constraintStart_toStartOf="@id/v_content" />

    <TextView
        android:id="@+id/tv_matter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/matter"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/et"
        app:layout_constraintStart_toStartOf="@id/v_content" />
</androidx.constraintlayout.widget.ConstraintLayout>