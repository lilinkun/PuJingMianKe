<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_eee"
        />


    <ImageView
        android:id="@+id/iv_project"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_no_pic"
        />

    <TextView
        android:id="@+id/tv_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:layout_marginTop="@dimen/margin8"
        android:layout_marginStart="5dp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/margin8"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/iv_project"
        android:layout_toStartOf="@+id/iv_other"
        />

    <TextView
        android:id="@+id/tv_project_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/margin8"
        android:layout_marginEnd="@dimen/margin8"
        android:layout_marginStart="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@+id/tv_project_name"
        android:layout_toStartOf="@+id/iv_other"
        android:layout_toEndOf="@+id/iv_project"
        />


    <ImageView
        android:id="@+id/iv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:src="@mipmap/ic_next_another" />

</RelativeLayout>